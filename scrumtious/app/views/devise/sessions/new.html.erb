<h2 class="text-center">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>

    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Enter Email here" %>
    <%= f.input :password, required: false, label: false, placeholder: "Enter Password here"%>



    <%= f.button :submit, "Log in", class: 'btn btn-primary' %>

<% end %>

<%= render "devise/shared/links" %>
